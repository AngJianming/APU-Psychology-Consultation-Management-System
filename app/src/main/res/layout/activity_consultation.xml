<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Consultation">

    <!-- Header Row -->

    <TableRow
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE3BB"
        android:gravity="center_vertical">

        <!-- No -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="No"
            android:textAlignment="center"
            android:textStyle="bold" />

        <!-- Date and Sessions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Date and Sessions"
            android:textAlignment="center"
            android:textStyle="bold" />

        <!-- Details -->
        <TextView
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Topics"
            android:textAlignment="center"
            android:textStyle="bold" />

        <!-- Approved? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="âœ”"
            android:textAlignment="center"
            android:textStyle="bold" />
    </TableRow>

    <!-- TableLayout for Data Rows -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBtn"
        android:layout_below="@id/headerRow">

        <!-- Data Rows will be dynamically added here -->

    </TableLayout>

    <LinearLayout
        android:id="@+id/bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnConsultationForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Consult Session" />

        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Back Home" />
    </LinearLayout>
</RelativeLayout>
